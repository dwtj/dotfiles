alias ls="ls -GF"
alias less="less -R"

alias git-log-graph="git log --graph --decorate --pretty=oneline --abbrev-commit"

# Workarounds for commands which can't handle `xterm-256color-italic`.
alias ssh="TERM=xterm-256color ssh"
alias brew="TERM=xterm-256color brew"

alias vim=nvim
alias view="nvim -R"

alias lldb-server="/Applications/Xcode.app/Contents/SharedFrameworks/LLDB.framework/Versions/A/Resources/debugserver"
